<h1> Favorites </h1>
<%= link_to  "Adopt a Pet", "/applications/new" %>
<%= link_to "Pets", "/pets" %>
<section id='adoptable'>
<%@pets.each do |pet|%>
<section id="pet-<%=pet.id%>">
  <%= link_to  "#{pet.name}", "/pets/#{pet.id}" %>
  <img src=<%= "#{pet.image}" %> alt=<%= "#{pet.image}" %> height="100" width="100">
  <%= button_to  "Remove from Favorites", "/favorites/#{pet.id}", method: :delete %>
</section>
<% end %>
</section>
<%= link_to  "Remove All Pets", "/favorites", method: :delete, data: {confirm: "Are you sure you want to remove all pets?"} %><br>

<h2>Pets with Pending Applications</h2>
<%@applications.each do |application|%>
  <%application.pets.each do |pet|%>
    <%= link_to  "#{pet.name}", "/pets/#{pet.id}" %><br>
    <img src=<%= "#{pet.image}" %> alt=<%= "#{pet.image}" %> height="100" width="100"><br>
  <% end %>
<% end %>
