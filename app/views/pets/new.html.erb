<body>

<h1>Create New Pet</h1>

<nav>
  <%= link_to "Shelters", "/shelters" %>
  <%= link_to "Pets", "/pets" %>
</nav>

<section>
<%= form_tag("/shelters/#{@shelter_id}/pets", method: :post) do %>
  <%= label_tag "Image" %>
  <%= text_field_tag :image %><br/>

  <%= label_tag "Name" %>
  <%= text_field_tag :name %><br/>

  <%= label_tag "Description" %><br/>
  <!-- <textarea name='pet[description]'></textarea><br/> -->
  <%= text_area_tag 'description' =%><br/>

  <%= label_tag "Age" %>
  <%= text_field_tag :approximate_age %><br/>

  <%= label_tag "Sex" %>
  <%= text_field_tag :sex %><br/>

  <%= submit_tag "Create Pet" %>
<% end %>
</section>
</body>
