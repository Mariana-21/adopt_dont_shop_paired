<body>


<h1><%= @pet.name %> </h1>

<nav>
  <%= link_to "Shelters", "/shelters" %>
  <%= link_to "Pets", "/pets" %>
</nav>
<section>
<img src=<%= "#{@pet.image}" %> alt=<%= "#{@pet.image}" %> height="100" width="100">
<ul>
  <li><%= "Age: #{@pet.approximate_age}" %></li>
  <li><%= "Sex: #{@pet.sex}" %></li>
  <li> Shelter: <a href="/shelters/<%=@pet.shelter_id%>"><%= "#{@pet.shelter.name}" %></a></li>
  <li><%= "Description: #{@pet.description}" %></li>
  <% if @pet.adoptable %>
  <li><%= "Status: Adoptable" %></li>
  <% else %>
  <li><%= "Status: Pending Adoption" %></li>
  <% end %>
</ul>
<%= button_to "Update Pet", "/pets/#{@pet.id}/edit", method: :get %><br/>
<%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
</section>

</body>
