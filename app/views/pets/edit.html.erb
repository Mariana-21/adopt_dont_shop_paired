<body>


<h1>Update Pet</h1>

<nav>
  <%= link_to "Shelters", "/shelters" %>
  <%= link_to "Pets", "/pets" %>
</nav>

<section>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
<%= label_tag "Image" %>
<%= text_field_tag :image, @pet.image %><br/>

<%= label_tag "Name" %>
<%= text_field_tag :name, @pet.name %><br/>

<%= label_tag "Description" %><br/>
<%= text_area_tag 'description', @pet.description =%><br/>

<%= label_tag "Age" %>
<%= text_field_tag :approximate_age, @pet.approximate_age %><br/>

<%= label_tag "Sex" %>
<%= text_field_tag :sex, @pet.sex %><br/>

<%= submit_tag "Update Pet" %>
<% end %>
</section>

</body>
